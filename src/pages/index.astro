---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { buttonVariants } from '@/components/ui/button'
import {Title, FAQ, Review, WiFi, EmergencyInfo, LocalArea, HouseRules, ActivitiesEvents, Services, Amenities, ThisWeek} from '@/components/content.tsx'

---
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
<BaseLayout
  title="Sloane Square Hotel"
  description="Information Website for Inhouse Guest at Sloane Square Hotel"
>
    <div class="flex justify-center mt-4">
      <h1
      class="text-3xl text-center font-extrabold leading-tight tracking-tighter md:text-4xl"
    > Welcome To
    </h1> </div>
    <div class="flex justify-center ">

    <h1
    class="text-3xl text-center font-extrabold leading-tight tracking-tighter md:text-4xl"
  > <u>Sloane Square Hotel  </u>
  </h1>
</div>


  <div class="justify-center flex flex-wrap items-start mx-auto mt-8">
    <div class="item flex-shrink-0 flex-basis-1/3 m-2"><Title client:load /></div>
    <!-- <div class="item flex-shrink-0 flex-basis-1/3 m-2"><ThisWeek client:load /></div> -->
    <div class="item flex-shrink-0 flex-basis-1/3 m-2"><Amenities client:load /></div>
    <div class="item flex-shrink-0 flex-basis-1/3 m-2"><Services client:load /></div>
    <div class="item flex-shrink-0 flex-basis-1/3 m-2"><ActivitiesEvents client:load /></div>
    <div class="item flex-shrink-0 flex-basis-1/3 m-2"><HouseRules client:load /></div>
    <div class="item flex-shrink-0 flex-basis-1/3 m-2"><LocalArea client:load /></div>
    <div class="item flex-shrink-0 flex-basis-1/3 m-2"><EmergencyInfo client:load /></div>
    <div class="item flex-shrink-0 flex-basis-1/3 m-2"><WiFi client:load /></div>
    <div class="item flex-shrink-0 flex-basis-1/3 m-2"><Review client:load /></div>
    <div class="item flex-shrink-0 flex-basis-1/3 m-2"><FAQ client:load /></div>
    </div>


    <div class="flex justify-center mt-4">
      <h1
      class="text-3xl text-center font-extrabold leading-tight tracking-tighter md:text-4xl"
    > Thank you for choosing  
    </h1> </div>
    <div class="flex justify-center ">

    <h1
    class="text-3xl text-center font-extrabold leading-tight tracking-tighter md:text-4xl"
  > <u>Sloane Square Hotel  </u>
  </h1>
</div>

<div class="flex items-center justify-center space-x-4 mt-6 ">
  <a href="#" target="_blank" class="text-2xl hover:text-blue-500">
    <i class="fa-brands fa-google"></i>
  </a>
  <a href="#" target="_blank" class="text-2xl hover:text-green-500">
    <i class="fa-brands fa-tripadvisor"></i>
  </a>
  </div>


</BaseLayout>
