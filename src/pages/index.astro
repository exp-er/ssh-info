---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { buttonVariants } from '@/components/ui/button'
---

<BaseLayout
  title="Sloane Square Hotel"
  description="Information Website for Inhouse Guest at Sloane Square Hotel"
>
  <section class="container grid items-center gap-6 pb-8 pt-6 md:py-10">
    <h1
    class="text-3xl text-center font-extrabold leading-tight tracking-tighter md:text-4xl"
  > Welcome to <br />
    Sloane Square Hotel 
  </h1>
    <div class="flex flex-col items-start gap-2">

      <p class="text-center text-lg text-muted-foreground">
        Accessible and customizable components that you can copy and paste into
        your apps. Free. Open Source.
      </p>
    </div>
    <div class="flex gap-4">
      <a
        href="https://ui.shadcn.com"
        target="_blank"
        rel="noreferrer"
        class={buttonVariants()}
      >
        Documentation
      </a>
      <a
        href="https://github.com/AREA44/astro-shadcn-ui-template"
        target="_blank"
        rel="noreferrer"
        class={buttonVariants({ variant: 'outline' })}
      >
        GitHub
      </a>
    </div>
  </section>
</BaseLayout>
