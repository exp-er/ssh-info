---
import { buttonVariants } from '@/components/ui/button'

---

<footer class="border-t py-6 md:px-8 md:py-0">
  <div
    class="container flex flex-col items-center justify-between gap-4 md:h-24 md:flex-row"
  >
    <p
      class="text-center text-sm leading-loose text-muted-foreground md:text-left"
    >
      Built by{' '}
      <a
        href="https://github.com/exp-er"
        target="_blank"
        rel="noreferrer"
        class="font-medium underline underline-offset-4"
      >
        EXP-ER
      </a>
      . Get in touch {' '}
      <a
        href="https://exp-er.com"
        target="_blank"
        rel="noreferrer"
        class="font-medium underline underline-offset-4"
      >
        here
      </a>
      .
    </p>

    <div class="flex gap-4">
      <a
        href="https://sloanesquarehotel.co.uk"
        target="_blank"
        rel="noreferrer"
        class={buttonVariants()}
      >
        Hotel Website
      </a>
      <a
        href="https://sloanesquarehotel.co.uk"
        target="_blank"
        rel="noreferrer"
        class={buttonVariants({ variant: 'outline' })}
      >
        Leave a Review
      </a>
    </div>
  </div>
</footer>
